/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo button{
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-color: #e6e6e6;
  text-align: center;
  padding: 20rpx 0;
}
.userinfo button image{
  width: 150rpx;
  height: 150rpx; 
}

.userinfo-nickname {
  color: #aaa;
}
.user-logo{
  color: #aaa;
  font-size: 16px;
}
.usermotto {
  margin-top: 200px;
}
.container{
  margin: 50rpx 0;
}
/*  */
.avatar{
  background-color:#fff;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.avatar .text{
  font-size: 16px;
  font-weight: bold;
  margin-top:20rpx;
}
.font-small{
  font-size: 12px;
  color: #aaa;
 
}
.avatar image{
  width: 200rpx;
  height: 200rpx;
  border-radius :50%;
  border:3rpx solid #fff;
  box-shadow: 0 5px 4px #ddd;
}
/* 功能三：通用项目 */
.cell{
  background-color: #fff;
  font-size: 16px;
}
.cell-item{
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 30rpx;
}
.fh{
  display: flex;
  justify-content: space-around;
}
.fh-name{
  font-size: 10px;
  color: #aaa;
}
.fh-details{
 display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
}
.fh image{
  width: 50rpx;
  height: 50rpx;
}
