}
/* 弹性两端对齐 */
.flex-between{
  display: flex;
  justify-content: space-between
}
/* 功能：通用的分隔快 */
.divider{
  height:20rpx;
  background:#f1f1f1;
}
/* 功能一：通用箭头样式 */
.arrow{
  display: flex;
  justify-content:space-between;
  align-items: center;
}
.arrow::after{
  content:"";
  width: 15rpx;
  height: 15rpx;
  border-top:3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg)
}